<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".trans_example">

    <Button
        android:id="@+id/button_trans_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="14dp"
        android:text="transfer money"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/code_transect_page"
        app:layout_constraintStart_toStartOf="@+id/code_transect_page"
        app:layout_constraintTop_toBottomOf="@+id/code_transect_page" />

    <EditText
        android:id="@+id/code_transect_page"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Enter code"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/rupees_transect_page"
        app:layout_constraintStart_toStartOf="@+id/rupees_transect_page"
        app:layout_constraintTop_toBottomOf="@+id/rupees_transect_page" />

    <EditText
        android:id="@+id/rupees_transect_page"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Enter rupees"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/spinner_transec_page"
        app:layout_constraintStart_toStartOf="@+id/spinner_transec_page"
        app:layout_constraintTop_toBottomOf="@+id/spinner_transec_page" />

    <Spinner
        android:id="@+id/spinner_transec_page"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>